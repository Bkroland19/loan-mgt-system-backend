generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
id String @id @default(cuid())
email String @unique
passwordHash String
createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
// example profile fields
name String?


sessions Session[]
}


model Session {
id String @id @default(cuid())
token String @unique // random 32+ bytes (base64/hex)
userId String
createdAt DateTime @default(now())
expiresAt DateTime
revokedAt DateTime?
ip String?
userAgent String?


user User @relation(fields: [userId], references: [id], onDelete: Cascade)


@@index([userId])
@@index([expiresAt])
}
